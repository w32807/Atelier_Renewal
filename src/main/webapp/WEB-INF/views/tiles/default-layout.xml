<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config\_3\_0.dtd">

<tiles-definitions>
	<definition name="layouts-tiles" template="/WEB-INF/views/tiles/default-layout.jsp">
	  	<put-attribute name="header" value="/WEB-INF/views/tiles/tiles-header.jsp" />
	  	<put-attribute name="nav" value="/WEB-INF/views/tiles/tiles-nav.jsp" />
	  	<put-attribute name="content" value="" />
	  	<put-attribute name="footer" value="/WEB-INF/views/tiles/tiles-footer.jsp" />
	</definition>
	
	<definition name="*/*.tiles" extends="layouts-tiles">
	  	<put-attribute name="content" value="/WEB-INF/view/{1}/{2}.jsp" />
	</definition>
</tiles-definitions>